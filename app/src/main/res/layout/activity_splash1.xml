<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".splash.Splash_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="vertical">

        <Button
            android:id="@+id/gotomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:fontFamily="@font/notosanskr_regular"
            android:text="홈화면으로"
            android:textColor="#5F5F5F"
            android:textSize="12dp"
            android:backgroundTint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/notosanskr_medium"
            android:text="댄서로서의 첫 걸음,\n무빗과 함께하세요."
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/notosanskr_regular"
            android:text="클래스 개설 신청 전,수강생들에게 보여질\n자기소개를 작성해주세요."
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            >
            <!--마진값 조정-->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/splashswipeimg2"
                android:layout_gravity="center_vertical"/>

        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:fontFamily="@font/notosanskr_regular"-->
<!--            android:text="시작에 대한 부담감이 있다면?"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:textSize="12dp"-->
<!--            android:layout_marginTop="30dp"/>-->

        <Button
            android:id="@+id/tutorintro"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#E87FEA"
            android:fontFamily="@font/notosanskr_regular"
            android:padding="0dp"
            android:text="튜터 소개 작성하기"
            android:textColor="#121212"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>