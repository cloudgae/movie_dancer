<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".portfolio.Portfolio_tab2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/playerCardView1"
                    android:layout_width="154dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="23dp"
                    app:cardCornerRadius="10dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pf_example3"
                        android:scaleType="centerCrop" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/portfolio_gr" />

                        <TextView
                            android:id="@+id/hash_textview3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanskr_medium"
                            android:gravity="bottom"
                            android:includeFontPadding="false"
                            android:padding="10dp"
                            android:text="#걸스힙합  #스트릿"
                            android:textSize="12dp" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/playerCardView2"
                    android:layout_width="154dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="12dp"
                    app:cardCornerRadius="10dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/pf_example"
                        android:scaleType="centerCrop" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/portfolio_gr" />

                        <TextView
                            android:id="@+id/hash_textview4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/notosanskr_medium"
                            android:gravity="bottom"
                            android:includeFontPadding="false"
                            android:padding="10dp"
                            android:text="#걸스힙합  #스우파"
                            android:textSize="12dp" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>



        </GridLayout>
    </ScrollView>

</FrameLayout>