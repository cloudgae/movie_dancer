<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moovit_Dancer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!--        타이틀바 표시 여부-->
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
       <!-- <item name="android:background">@color/black</item>-->
        <item name="android:textColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6FD5EB</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4DC6E0</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <!-- 날짜 선택 피커. -->
        <item name="android:datePickerDialogTheme">@style/DialogDatePicker.Theme</item>
        <!-- 시간 선택 피커. -->
        <item name="android:timePickerDialogTheme">@style/DialogDatePicker.Theme</item>

    </style>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_spinner_background</item>
        <item name="android:popupBackground">@drawable/custom_spinner_background</item>
        <item name="android:dropDownSelector">@drawable/custom_spinner_dropdown_item_background</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColorPrimary">@color/white</item>


    </style>
    <style name="DialogDatePicker.Theme" parent="Theme.AppCompat.Light.Dialog" >
        <item name="colorAccent">#D9D9D9</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayText</item>
        <item name="android:dateTextAppearance">@style/CustomDateText</item>
    </style>
    <style name="CustomWeekDayText">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomDateText">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="InfoNumberPickerTheme">
        <item name="android:textSize">17dp</item>
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>
    <style name="timebuttonTheme">
        <item name="colorPrimary">#3D3D3D</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textColor">#707070</item>
    </style>
    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#404040</item>
        <item name="itemIconTint">@drawable/menu_selector_color</item>
        <item name="itemTextColor">@drawable/menu_selector_color</item>
    </style>
    <style name="NotoSansRegularTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:textSize">14sp</item> <!-- 폰트 크기를 원하는 크기로 설정합니다. -->
        <item name="android:textColor">#FFFFFF</item> <!-- 텍스트 색상을 흰색으로 설정합니다. -->
    </style>
   <!-- <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@color/black</item> &lt;!&ndash; 드롭다운 목록의 배경색을 검정색으로 설정 &ndash;&gt;
        <item name="android:textColor">@color/white</item> &lt;!&ndash; 드롭다운 목록의 텍스트 색상을 흰색으로 설정 &ndash;&gt;
    </style>-->

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:height">1dp</item> <!-- 높이 조절 -->
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 다이얼로그 제목의 글자색 설정 -->
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="ApplyButton">
        <item name="android:backgroundTint">#313131</item>
        <item name="android:textColor">@color/white</item> <!-- 원하는 텍스트 색상을 설정합니다 -->
        <!-- 다른 버튼 속성들을 필요에 따라 추가할 수 있습니다 -->
    </style>

</resources>